    document.getElementById("Quad10popup").innerHTML = "This scenario is characterised by low climate risk (RCP2.6) and ineffective agricultural policy implementation. This future assumes no change to agricultural areas areas and status quo crop varieties. <br><br><a class='box2' href='/countries/ZAF/Quad10'><div class='box grow' style='padding: 1.25em 2.25em; width: 100%; position:relative; height:20%; margin-top: 20px'>Scenario Summary Document</div></a>"
    document.getElementById("Quad00popup").innerHTML = "This scenario is characterised by high climate risk (RCP8.5) and ineffective agricultural policy implementation. This future assumes a reduction in agricultural areas and status quo crop varieties. <br><br><a class='box2' href='/countries/ZAF/Quad11'><div class='box grow' style='padding: 1.25em 2.25em; width: 100%; position:relative; height:20%; margin-top: 20px'>Scenario Summary Document</div></a>"
